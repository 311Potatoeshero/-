#include <stdio.h>
int main()
{
	int n = 3,a=1;
	for (int i = 1; i <= 4; i++)
		//前半部分
	{
		for (int j = n; j > 0; j--)
		{
			printf(" ");
		}
		n--;
		for (int x = 1; x <= a; x++)
		{
			printf("*");
		}
		a += 2;
		printf("\n");
	}
	return 0;
}
