        f(n);
    }

    public static void f(int n) {
        if(n<0) {
            System.out.println("负数不可以求阶乘");
            return;//方法结束，返回到调用位置继续执行
        }
        if(n == 0) {
            System.out.println("0的阶乘是1");
            return;
        }
        /*
         * r = 5
         * i
         * 4, r=r*i
         * 3, r=r*i
         * 2, r=r*i
         * 1, r=r*i
         */
        long r = n;
        for(int i=n-1; i>=1; i--) {
            r *= i;
        }
        System.out.println(n+"的阶乘："+r);
